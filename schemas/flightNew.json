{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/flightNew.schema.json",
  "type": "object",
  "properties": {
    "flightNumber": {
      "type": "string",
      "minLength": 1,
      "maxLength": 15
    },
    "tripId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "origin": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "destination": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    }
  },
  "additionalProperties": false,
  "required": [
    "flightNumber",
    "tripId",
    "origin",
    "destination"
  ]
}
