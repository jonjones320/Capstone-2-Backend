{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ranner.com/trip.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "origin": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "destination": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "startDate": {
      "type": "string"
    },
    "endDate": {
      "type": "string"
    },
    "passengers": {
      "type": "number",
      "minimum": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "origin",
    "destination",
    "startDate",
    "endDate"
  ]
}
