{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/trip.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "destination": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "startDate": {
      "type": "string",
      "format": "date-time"
    },
    "endDate": {
      "type": "string",
      "format": "date-time"
    },
    "budget": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "destination",
    "startDate",
    "endDate"
  ]
}
